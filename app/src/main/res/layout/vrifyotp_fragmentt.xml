<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfilevryy"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle"
                    app:bciv_border_color="@color/redbtn"
                    app:bciv_border_size="1dp"
                    app:bciv_src="@drawable/profile" />

                <TextView
                    android:id="@+id/tvNamevryy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgProfilevryy"
                    android:text="mukul"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/tvNamevryy"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imgProfilevryy"
                    android:src="@drawable/call"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tvPricevryy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="$ 00.00"
                    android:textColor="@color/redbtn"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvEarnedvryy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPricevryy"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="Earned"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter OTP"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/number_edit_text"
                        android:layout_width="90dp"
                        android:layout_height="@dimen/dp_40"
                        android:digits="01234 56789"
                        android:background="@drawable/car_photos"
                        android:inputType="number"
                        android:textColor="@color/black" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="wrap_content">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOtpmatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cornerRadius="@dimen/dp_10"
                        android:backgroundTint="@color/colorRedToolBar"
                        android:text="OTP Match"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/sp_15"
                android:layout_height="match_parent">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick up"/>

                <TextView
                    android:id="@+id/tv_pickuplocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="H214......"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="165dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cornerRadius="@dimen/dp_20"
                        android:backgroundTint="@color/colorRedToolBar"
                        android:text="Emergency"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/arrived"
                        android:layout_width="165dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cornerRadius="@dimen/dp_20"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/black"
                        android:text="Arrived"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>