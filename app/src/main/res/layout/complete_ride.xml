<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfilevry"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle"
                    app:bciv_border_color="@color/redbtn"
                    app:bciv_border_size="1dp"
                    app:bciv_src="@drawable/profile" />

                <TextView
                    android:id="@+id/tvNamevry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgProfilevry"
                    android:text="mukul"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tvPricevry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="$00.00"
                    android:textColor="@color/redbtn"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvEarnedvry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPricevry"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="Earned"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="match_parent">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop"/>

                <TextView
                    android:id="@+id/drpe_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="H214......"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cornerRadius="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:backgroundTint="@color/colorRedToolBar"
                        android:text="Emergency"/>

                    <com.google.android.material.button.MaterialButton

                       android:id="@+id/tvCompletetrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cornerRadius="@dimen/dp_20"
                        android:backgroundTint="@color/green"
                        android:text="Complete"/>




                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>